#------------------------------------------------------------------------------
# Lines
#------------------------------------------------------------------------------

lines.linewidth   : 1.5              # default width in points
lines.markersize  : 4                # default markersize, in points

#------------------------------------------------------------------------------
# Font & text
#------------------------------------------------------------------------------

font.family        : sans-serif
text.color         : 15181E # 900
font.size          : 14

## relative to font.size, using the following values: xx-small, x-small,
## small, medium, large, x-large, xx-large, larger, or smaller

axes.titlesize     : x-large   # Relative to font.size
axes.titlepad      : 16      # padding between title and axes
axes.titleweight   : bold

axes.labelsize     : medium  # fontsize of the x and y labels
axes.labelpad      : 8.0     # space between label and axis
axes.labelweight   : 600    # weight of the x and y labels

xtick.labelsize    : small  # fontsize of the tick labels
ytick.labelsize    : small  # fontsize of the tick labels
legend.fontsize    : medium
legend.title_fontsize: medium

#------------------------------------------------------------------------------
# Axes
#------------------------------------------------------------------------------

axes.linewidth     : 1.0
axes.edgecolor     : 232832 # 800
axes.facecolor     : FFFFFF

#------------------------------------------------------------------------------
# Hatches
#------------------------------------------------------------------------------
hatch.linewidth    : 2.0

#------------------------------------------------------------------------------
# Ticks
#------------------------------------------------------------------------------

# x axis
xtick.major.size     : 8.25      # major tick size in points
xtick.minor.size     : 4.125     # minor tick size in points
xtick.major.width    : 0.75      # major tick width in points
xtick.minor.width    : 0.75      # minor tick width in points
xtick.major.pad      : 6         # distance to major tick label in points
xtick.minor.pad      : 6         # distance to the minor tick label in points
xtick.direction      : out       # direction: in, out, or inout
xtick.minor.visible  : False
xtick.color          : 212529

# y axis
ytick.major.size     : 8.25      # major tick size in points
ytick.minor.size     : 4.125     # minor tick size in points
ytick.major.width    : 0.75      # major tick width in points
ytick.minor.width    : 0.75      # minor tick width in points
ytick.major.pad      : 6         # distance to major tick label in points
ytick.minor.pad      : 6         # distance to the minor tick label in points
ytick.direction      : out       # direction: in, out, or inout
ytick.minor.visible  : False
ytick.color          : 232832 # 800

#------------------------------------------------------------------------------
# Figure
#------------------------------------------------------------------------------
figure.figsize       : 8,6      # inches

figure.titlesize     : larger   # size of the figure title (``Figure.suptitle()``)
figure.titleweight   : 600

figure.facecolor     : FFFFFF

#------------------------------------------------------------------------------
# Grids
#------------------------------------------------------------------------------
grid.linewidth       : 0.75
grid.alpha           : 1
axes.grid.which      : major
axes.grid            : True

#------------------------------------------------------------------------------
# Legend
#------------------------------------------------------------------------------
legend.loc           : best
legend.fancybox      : True
legend.facecolor     : FFFFFF
legend.edgecolor     : 9B9B9B
legend.labelcolor    : 232832 # 800
legend.shadow        : False
legend.frameon       : True
legend.framealpha    : 1.0
